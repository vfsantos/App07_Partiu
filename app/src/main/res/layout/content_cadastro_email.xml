<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.CadastroActivity.CadastroEmailActivity"
    tools:showIn="@layout/activity_cadastro_email">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout_cadastraremail_voltar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:onClick="onClickVoltarMainCliente"
        app:layout_constraintEnd_toStartOf="@+id/textView_cadastraremail_titulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageview_cadastraremail_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_white" />
    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/textView_cadastraremail_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="168dp"
        android:text="@string/title_activity_cadastroemail"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/branco_100"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/textview_cadastraremail_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/textview_cadastroemail_email"
        android:textAllCaps="false"
        android:textColor="@color/branco_100"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_cadastraremail_titulo" />

    <EditText
        android:id="@+id/edittext_cadastraremail_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_weight=".75"
        android:background="@drawable/edittext_branco"
        android:hint="@string/textview_cadastroemail_hint"
        android:inputType="textWebEmailAddress"
        android:textAllCaps="false"
        android:textColor="@color/preto"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_cadastraremail_email" />

    <Button
        android:id="@+id/button_cadastraremail_avancar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_degrade_rosa_amarelo"
        android:text="@string/button_cadastroemail_avancar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/branco_100"
        android:textSize="14sp"
        android:textStyle="bold"
        android:enabled="false"
        android:onClick="onClickAvancarToCadastroSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_cadastraremail_complemento" />

    <TextView
        android:id="@+id/textview_cadastraremail_complemento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/textview_cadastroemail_email_complemento"
        android:textAllCaps="false"
        android:textColor="@color/branco_100"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_cadastraremail_email" />


</android.support.constraint.ConstraintLayout>